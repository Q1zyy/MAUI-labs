<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ProgressBarPage">
    <Grid RowDefinitions="*,*,*">
        <Label x:Name="StartLabel" Text="Welcome to .NET MAUI!" Grid.Row="0" HorizontalOptions="Center"/>
        <ProgressBar x:Name="Progress" ProgressColor="SeaGreen" VerticalOptions="Start" Grid.Row="1"></ProgressBar>
        <Label x:Name="Persents" Text="0" Grid.Row="1"></Label>
        <HorizontalStackLayout Spacing="20" Grid.Row="2" HorizontalOptions="Center">
            <Button Text="Start" Clicked="OnStartClicked" VerticalOptions="Center"></Button>
            <Button Text="Cancel" Clicked="OnCancelClicked" VerticalOptions="Center"></Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>